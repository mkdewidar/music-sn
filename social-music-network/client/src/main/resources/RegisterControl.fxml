<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.PasswordField?>

<fx:root type="javafx.scene.layout.VBox" alignment="CENTER_LEFT" spacing="5.0"
         xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121">
    <children>
        <Label text="Full Name" />
        <TextField fx:id="nameField" maxWidth="200.0" />

        <Label text="Email" />
        <TextField fx:id="emailField" maxWidth="200.0" />

        <Label fx:id="regError" text="Username is already in use, please use another." visible="false" managed="false" />
        <Label text="Username" />
        <TextField fx:id="usernameField" maxWidth="200.0" />

        <Label text="Password" />
        <PasswordField fx:id="passwordField" maxWidth="200.0" />

        <Button fx:id="registerButton" mnemonicParsing="false" text="Register" />
    </children>
    <padding>
        <Insets left="50.0" right="25.0" />
    </padding>
</fx:root>