<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.VBox?>

<fx:root type="javafx.scene.control.Accordion" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
    <panes>
        <TitledPane text="Create Channel">
            <content>
                <VBox spacing="5.0">
                    <children>
                        <Label fx:id="uniqueNameErrorLabel" text="Name must be unique" textFill="red" />
                        <Label fx:id="noNameErrorLabel" text="Name must be unique" textFill="red"/>
                        <Label text="Name" />
                        <TextField fx:id="channelNameField" />
                        <Label text="Member names separated by ;" />
                        <TextField fx:id="channelMembersField" />
                        <Button fx:id="createChannelButton" text="Create" />
                    </children>
                </VBox>
            </content>
        </TitledPane>
    </panes>
</fx:root>